@model IEnumerable<HireGnome.Models.Products>
@{
    ViewBag.Title = "Index";
}

<h2>Our gnomes</h2>


<div class="container-fluid"> <!--Full width container-->
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-sm-4" style="background-color:lavender;">
                <p>@Html.DisplayFor(modelItem => item.Name)</p>
                <p>@Html.DisplayFor(modelItem => item.Details)</p>
                <p>@Html.DisplayFor(modelItem => item.Price)</p>

                <a href="@Url.Action("Edit", "Product")/@Html.DisplayFor(modelItem => item.Id)">Edit</a>
                <a onclick="deleteProduct(@Html.DisplayFor(modelItem => item.Id))">Delete</a>
                <a onclick="hideProduct(@Html.DisplayFor(modelItem => item.Id))">Hide</a>
                <a href="@Url.Action("Add", "Cart")/@Html.DisplayFor(modelItem => item.Id)">Add product</a>
            </div>
        }
    </div>
</div>

<script>
    function deleteProduct(id)
    {
       var r = confirm("Are you sure you want to delete this product?");
       if(r == true)
       {
          window.location.assign("/Product/Delete/" + id);
       }
    }

    function hideProduct(id){
        var r = confirm("Do you really want to deactivate this product? (No user will be able to buy it)");
        if(r == true){
            window.location.assign("/Product/Hide/" + id);
        }
    }
</script>

    


