@model IEnumerable<HireGnome.Models.Products>
@{
    ViewBag.Title = "Index";
}

<div class="panel-title text-center">
    <h2>Find your Gnome</h2>


</div>





<div class="container-fluid"> <!--Full width container-->
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-sm-4">
                <div class="thumbnail">
                    <img src="@item.Image" alt="@item">
                </div>
                
                <div class="panel-title text-center">
                    @if (!item.IsPublic)
                    {
                        <h2 style="color:red">@item.Name ~ Disabled Gnome</h2>
                    }
                    else
                    {
                        <h2>@item.Name</h2>
                    }

                    <button onclick="window.location.assign('/Product/Show?gnome_id=' + @item.Id)">Details</button>

                    @if (User.IsInRole("admin"))
                    {
                        <div class="row">
                            <div class="col-sm-4">
                                <button class="btn btn-success" onclick="editGnome(@item.Id)">
                                    Edit
                                </button>
                            </div>
                            <div class="sol-sm-4">
                                <button class="btn btn-danger" onclick="deleteGnome(@item.Id)">
                                    Delete
                                </button>
                            </div>
                            <div class="sol-sm-4">
                                <button class="btn btn-primary" onclick="hideGnome(@item.Id)">
                                    Hide / Un-hide
                                </button>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
    </div>
</div>

    


