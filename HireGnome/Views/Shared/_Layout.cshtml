<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Hire a Gnome</title>
    <link href="~/Content/css/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/css/hire-gnome.css" rel="stylesheet" type="text/css" />
    <script src="~/Content/Scripts/jquery-3.1.1.min.js"></script>
    <style>
        a{
            color:white;
        }
    </style>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @if (@User.Identity.IsAuthenticated)
                {
                    @Html.ActionLink("Hire a Gnome " + @User.Identity.Name + "!", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                }
                else
                {
                    @Html.ActionLink("Hire a Gnome!", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                }
                    

               
                
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>
                        <a href="@Url.Action("Index", "Product")">Our gnomes</a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index", "Cart")">Your order</a>
                    </li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <li>
                            <a href="@Url.Action("Registration", "Auth")">Register</a>
                        </li>
                        <li>
                            <a href="@Url.Action("Login", "Auth")">Login</a>
                        </li>

                    }
                    else
                    {
                    <li>
                        <a href="@Url.Action("MyCarts", "Cart")">
                            Shopping carts
                        </a>
                    </li>
                    <li>
                        
                        <a href="@Url.Action("Logout", "Auth")">
                            Logout
                        </a>
                    </li>
                    
                    }
                </ul>
            </div>
        </div>
    </div>
    @if (User.IsInRole("admin"))
    {
        // Loads the admin navbar
        <div class="navbar" style="background-color:orange">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <div class="navbar-brand">
                        Admin panel
                    </div>
                    
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>
                            <a href="@Url.Action("AddGnome", "Admin")">Add Gnome</a>
                        </li>
                        <li>
                            <a href="@Url.Action("Index", "Product")">List and edit</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
      }

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Hire a Gnome</p>
        </footer>
    </div>

    <script src="~/Content/Scripts/jquery-3.1.1.min.js"></script>
    <script src="~/Content/Scripts/bootstrap.min.js"></script>
    <script src="~/Content/Scripts/hire-gnome.js"></script>
</body>
</html>